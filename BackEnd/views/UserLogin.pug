                    li  #[a(href="/About") About Us]                   
                    li  #[a(href="/OurStaff") Our Staff]                    
                    
        div.mycontact 
            h1 Student login 
            #main  
            
                form.item(action="/UserLogin" method="POST" ) 
                
                    select(name='usertype' required)
