                           option(value="Student") Student
                    input(type="email" name="email" placeholder="Enter your email")
                
                    input(type="password" name="password" placeholder="Enter your password" class="item") 
                

                    button#btn(class="btn") 
                         | Login    

            p.item#fail_msg=fail_message    

