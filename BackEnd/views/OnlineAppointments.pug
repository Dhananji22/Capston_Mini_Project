doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Online Appointment Page
        block style 
        link(rel="stylesheet", href="../public/OnlineAppointments.css") 


    body


    
    nav#navbar          
                ul 
                    li  #[a(href="/") Home]                  
                    li  #[a(href="/Service") Services]            
                    li  #[a(href="/OurStaff") Our Staff]        
                    li  #[a(href="/PhysicalAppointments") Physical Appointments]
                    li  #[a(href="/About") About]  
                    li  #[a(href="/OnlineAppointments") Online appointment]  
                    li  #[a(href="/Appointments") Appointment]             
                         

    div.mycontact                
        h1 Set Up Your Online Appointment
    #main
        form(action="/PhysicalAppointments" method="POST" id="contactform")
            div Choose your doctor:
                select#doctor(name="doctor") 
                        option(value="Doctor 1 ") Doctor 1
                        option(value="Doctor 2") Doctor 2
                        option(value="Doctor 3") Doctor 3 
            br  

            div          
            input(type="text" name="reg_number" placeholder="Enter your registration number.." class="item"  )
            br
            br

            div      
            input(type="text" name="phone" placeholder="Enter your phone number" class="item") 
            br 
            br

            div     
            input(type="email" name="email"  placeholder="Enter your email" class="item")
            br 
            br

            div.datetime
                //- input.date(type="date", name="date") 

            div    
                |day:
                select.times#day(name="date") 
                    option(value="1" selected) 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    option(value="6") 6
                    option(value="7") 7
                    option(value="8") 8
                    option(value="9") 9
                    option(value="10") 10
                    option(value="11") 11
                    option(value="12") 12
                    option(value="13") 13
                    option(value="14") 14
                    option(value="15") 15
                    option(value="16") 16
                    option(value="17") 17
                    option(value="18") 18
                    option(value="19") 19
                    option(value="20") 20
                    option(value="21") 21
                    option(value="22") 22
                    option(value="23") 23
                    option(value="24") 24
                    option(value="25") 25
                    option(value="26") 26
                    option(value="27") 27
                    option(value="28") 28
                    option(value="29") 29
                    option(value="30") 30

            div        
                |month:
                select.times#month(name="month")  
                    option(value="1" selected) 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    option(value="6") 6
                    option(value="7") 7
                    option(value="8") 8
                    option(value="9") 9
                    option(value="10") 10
                    option(value="11") 11
                    option(value="12") 12  

            div        
                |year:    
                select.times#year(name="year")  
                    option(value="2024" selected) 2024    
                    option(value="2025") 2025 
                    option(value="2026") 2026   
                    option(value="2027") 2027 
                    option(value="2028") 2028   
  
  
            div
                |time:
                select.times#timeslot(name="time") 
                    option(value="11") 10:30 - 11:30
                    option(value="12") 11:30 - 12:30
                    //- option(value="1") 12:30 - 1:30
                    option(value="2") 1:30 - 2:30
                    option(value="3") 2:30 - 3:30
                    option(value="4") 3:30 - 4:30
                    option(value="5") 4:30 - 5:30
                
                
            br

            div Choose your appointment type:
                select#appointment_type(name="appointment_type") 
                        option(value="Physical ") Physical
                        option(value="Online") Online
                        
            br  

            div
            input(type="textarea" name="message" placeholder="Enter a brief description of the disease" class="item") 
            br
            br

            button(class="btn")
              | Submit   

            h3.Submited 

            p#success= success_message
            h4#fail= fail_message

            //- p(color='green')=res 



    
